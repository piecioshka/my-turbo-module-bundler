    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Unit tests",
            "program": "${workspaceFolder}/node_modules/.bin/jest",
            "args": [
                "--colors",
                "--rootDir",
                "${workspaceFolder}/test/specs/"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "End-to-end tests",
            "program": "${workspaceFolder}/node_modules/.bin/jest",
            "args": [
                "--colors",
                "--rootDir",
                "${workspaceFolder}/e2e/specs/"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}